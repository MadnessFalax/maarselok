@{
}

@model ProfileModel;
@await Html.PartialAsync("NavbarComponent", new NavbarModel() {IsAuthorized = Model.IsAuthorized})

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="row my-2">
                <div class="col-xs-12 col-sm-4">
                    <div class="d-flex align-items-center flex-grow-1">
                        @Html.LabelFor(Model => Model.Student.Name, new { @class = "control-label text-right mb-0" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                    @Html.TextBoxFor(Model => Model.Student.Name, new {@readonly = "readonly", @class="form-control"})
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="row my-2">
                <div class="col-xs-12 col-sm-4">
                    <div class="d-flex align-items-center flex-grow-1">
                        @Html.LabelFor(Model => Model.Student.Email)
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                    @Html.TextBoxFor(Model => Model.Student.Email, new {@readonly = "readonly", @class="form-control"})
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="row my-2">
                <div class="col-xs-12 col-sm-4">
                    <div class="d-flex align-items-center flex-grow-1">
                        @Html.LabelFor(Model => Model.Student.Address, new { @class = "control-label text-right mb-0" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                    @Html.TextBoxFor(Model => Model.Student.Address, new {@readonly = "readonly", @class="form-control"})
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="row my-2">
                <div class="col-xs-12 col-sm-4">
                    <div class="d-flex align-items-center flex-grow-1">
                        @Html.LabelFor(Model => Model.Student.ApplicationCount, new { @class = "control-label text-right mb-0" })
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8">
                    @Html.TextBoxFor(Model => Model.Student.ApplicationCount, new {@readonly = "readonly", @class="form-control"})
                </div>
            </div>
        </div>
    </div>
</div>
